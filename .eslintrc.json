{
  "extends": ["react-app", "react-app/jest", "airbnb"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "semi": ["warn"],
        "block-spacing": "warn",
        "brace-style": "warn",
        "key-spacing": "warn",
        "comma-spacing": "warn",
        "indent": "warn",
        "object-property-newline": "warn",
        "keyword-spacing": "warn"

        // Добавьте другие общие правила здесь, которые должны применяться как для JavaScript, так и для TypeScript файлов
      }
    }
  ],

  "rules": {
    // Примеры кастомных правил
    //"semi": ["error", "always"], // Требовать точку с запятой в конце строки
    //"indent": ["error", 2], // Установить отступ в 2 пробела
    "quotes": ["warn", "double"], // Использовать двойные кавычки
    //"key-spacing": ["warn"], // Предупреждение для key-spacing
    "react/react-in-jsx-scope": ["off"], // Отключить правило react/react-in-jsx-scope React 17+ неактуально

    // Переопределение правил Airbnb на "warn" или "off"
    "import/no-unresolved": ["warn"], // Предупреждение для unresolved imports
    "import/extensions": ["warn"], // Предупреждение для отсутствующих расширений файлов
    "import/prefer-default-export": ["off"], // Предупреждение для предпочтения default export
    "react/jsx-filename-extension": [
      "warn",
      { "extensions": [".jsx", ".tsx"] }
    ], // Разрешить JSX в .jsx и .tsx файлах
    "react/jsx-props-no-spreading": ["warn"], // Предупреждение для spreading props
    "react/require-default-props": ["warn"], // Предупреждение для отсутствующих defaultProps
    "react/forbid-prop-types": ["warn"], // Предупреждение для использования propTypes
    "react/no-array-index-key": ["warn"], // Предупреждение для использования индексов массива в key
    "react/button-has-type": ["warn"], // Предупреждение для отсутствия type у кнопок
    "jsx-a11y/click-events-have-key-events": ["warn"], // Предупреждение для отсутствия key events на кликабельных элементах
    "jsx-a11y/no-static-element-interactions": ["warn"], // Предупреждение для интерактивных элементов без ролей
    "jsx-a11y/anchor-is-valid": ["warn"], // Предупреждение для невалидных anchor-элементов
    "no-unused-vars": ["warn"], // Предупреждение для неиспользуемых переменных
    "no-console": ["off"], // Предупреждение для использования console
    "no-param-reassign": ["warn"], // Предупреждение для перезаписи параметров функции
    "no-shadow": ["warn"], // Предупреждение для затенения переменных
    "no-underscore-dangle": ["warn"], // Предупреждение для использования нижних подчеркиваний
    "no-nested-ternary": ["warn"], // Предупреждение для вложенных тернарных операторов
    "no-restricted-syntax": ["warn"], // Предупреждение для использования запрещенных синтаксических конструкций
    "no-plusplus": ["warn"], // Предупреждение для использования ++ и --
    "no-use-before-define": ["warn"], // Предупреждение для использования переменных до их объявления
    "no-unused-expressions": ["warn"], // Предупреждение для неиспользуемых выражений
    "no-multi-spaces": ["warn"], // Предупреждение для множественных пробелов
    "no-trailing-spaces": ["warn"], // Предупреждение для trailing spaces
    "no-multiple-empty-lines": ["warn"], // Предупреждение для множественных пустых строк
    "object-curly-newline": ["warn"], // Предупреждение для newlines в объектах
    "object-curly-spacing": ["warn", "always"], // Предупреждение для пробелов внутри фигурных скобок
    "array-bracket-spacing": ["warn", "always"], // Предупреждение для пробелов внутри квадратных скобок
    "comma-dangle": ["warn", "always-multiline"], // Предупреждение для trailing запятых
    "arrow-parens": ["warn", "always"], // Предупреждение для скобок вокруг параметров стрелочных функций
    "arrow-body-style": ["warn", "as-needed"], // Предупреждение для стиля тела стрелочных функций
    "prefer-const": ["warn"], // Предупреждение для использования let вместо const
    "prefer-template": ["warn"], // Предупреждение для использования шаблонных строк
    "prefer-arrow-callback": ["warn"], // Предупреждение для использования стрелочных функций в колбэках
    "prefer-destructuring": ["warn"], // Предупреждение для деструктуризации

    "semi": ["warn"],
    "block-spacing": "warn",
    "brace-style": "warn",
    "key-spacing": "warn",
    "comma-spacing": "warn",
    "indent": "warn",
    "object-property-newline": "warn",
    "keyword-spacing": "warn"
  }
}
